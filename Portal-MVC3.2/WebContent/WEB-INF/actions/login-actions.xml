<?xml version="1.0" encoding="UTF-8"?>
<actions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	     xsi:noNamespaceSchemaLocation="../schema/actions.xsd">
    <form-beans>
    </form-beans>
    <action-mappings>
       	<action type="LoginAction" path="/Login.do">
    		<forward name="success" path="/login/login.jsp" />
    	</action>
	   	<action type="ValidarUsuarioAction" path="/validarUsuario.do">
	   		<forward name="admin" path="/login/admin.jsp" />
	   		<forward name="cliente" path="/login/cliente.jsp" />
	   		<forward name="sistema" path="/login/sistema.jsp" />
	   	</action>
	   	<action type="LogOutAction" path="/Logout.do">
    		<forward name="success" path="/login/logout.jsp" />
    	</action>
    	<action type="IngresarRegistroAction" path="/ingresarRegistro.do">
    		<forward name="success" path="/login/ingresarRegistro.jsp" />
    	</action>
    	<action type="RegistrarUsuarioAction" path="/registrarUsuario.do">
    		<forward name="success" path="/login/postRegistro.jsp" />
    		<forward name="failure" path="/login/postRegistro.jsp" />
    	</action>
    </action-mappings>
</actions>
